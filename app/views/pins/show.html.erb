<%= link_to 'Back', pins_path %></br>

<div class="container">
  <div class='row'>
      <div class='panel panel-default'>
        <div class='panel-heading center'>
          <%= image_tag @pin.image(:large)%>
        </div>
        <div class='panel-body'>
          <p class="username"><%= @pin.user.name if @pin.user %></p>
          <p class="title"><%= @pin.title %></p>
        </div>
        <ul class='list-group'>
          <li class='list-group-item'>
            <p class="pin_description"><%= @pin.description %></p>
          </li>
        </ul>

        <% if @pin.user == current_user %>
            <div class='panel-footer'>
                <%= link_to raw('<span class="glyphicon glyphicon-edit"></span> Edit'), edit_pin_path(@pin) %>
            </div>
          <% end %>

      </div>
  </div>
</div>
